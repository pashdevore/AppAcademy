<h1><%= @band.name %>'s Albums</h1>

<ul>
  <% @band.albums.order('title').each do |album| %>
    <li><%= link_to album.title, album_url(album.id) %>
        <%= button_to "Edit", edit_album_url(album), method: :get %>
        <%= button_to "Delete", album_url(album), method: :delete %></li>
  <% end %>
</ul>
<br><br>

<%= button_to "Back", bands_url, method: :get %>
<%= button_to "Add Album", new_band_album_url(@band.id), method: :get %>
