<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:errors] %>
    <p><%= flash[:errors] %><p>
  <% end %>

  <% if logged_in? %>
    <%= button_to "Sign Out", session_url, method: :delete %>
  <% end %>

<%= yield %>

</body>
</html>
